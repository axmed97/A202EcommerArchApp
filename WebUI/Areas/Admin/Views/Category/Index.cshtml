@model List<CategoryAdminListDTO>

<a href="/admin/category/create" class="btn btn-dark">Create</a>
<table class="table table-dark table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Category Image</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#</td>
                <td>@item.CategoryName</td>
                <td><img src="@item.PhotoUrl" width="150" /></td>
                <td>@item.IsFeatured</td>
                <td>
                    <a href="/admin/category/delete/@item.Id" class="btn btn-danger">Delete</a>
                    <a href="/admin/category/edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="#" class="btn btn-success">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>