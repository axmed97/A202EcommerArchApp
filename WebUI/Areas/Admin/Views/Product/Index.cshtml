@model List<ProductAdminListDTO>


<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Price</th>
            <th>Email</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
                <td>@item.Email</td>
                <td>
                    <img src="@item.PhotoUrl" width="200" alt="" />
                </td>
                <td>
                    <a href="/admin/product/edit/@item.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>